@model Webdiyer.WebControls.Mvc.PagedList<Subject>
<table class="table table-bordered table-striped">
    <tr>
        <th class="nowrap" style="width:10%">序号</th>
        <th class="nowrap"  style="width:80%">标题</th>
        <th class="nowrap"  style="width:10%">作者</th>
       
    </tr>
    @{ int i = 0;}
    @foreach (var item in Model)
    {
        <tr>
            <td>@(Model.StartItemIndex + i++)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
        </tr>
    }
</table>
